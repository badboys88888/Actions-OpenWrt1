#########################################################
CONFIG_PACKAGE_luci-app-adblock=y               # LuCI 前端管理界面
CONFIG_PACKAGE_adblock=y                         # 核心广告屏蔽功能
CONFIG_PACKAGE_dnsmasq-full=y                    # DNS解析增强，支持广告屏蔽
CONFIG_PACKAGE_luci-app-dnscrypt-proxy2=y       # 可选，结合 DNSCrypt 提升DNS安全与广告屏蔽效果
CONFIG_PACKAGE_luci-app-smartdns=y              # 可选，SmartDNS + 规则也可屏蔽广告
CONFIG_PACKAGE_luci-app-surge=y                 # 可选，部分规则可做广告过滤

#########################################################
