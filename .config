CONFIG_PACKAGE_luci-app-smartdns=y              # LuCI 前端管理界面
CONFIG_PACKAGE_luci-app-smartdns_INCLUDE_DNSCRYPT=y   # 可选，结合 DNSCrypt 提升安全性
